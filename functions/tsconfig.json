{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "types": ["../types"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts",
    "../types/**/*.ts"
  ],
  "exclude": ["node_modules", "lib", ".eslintrc.js"]
}
